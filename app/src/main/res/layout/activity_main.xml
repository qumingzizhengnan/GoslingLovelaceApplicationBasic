<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.echo.goslinglovelace.MainActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        app:srcCompat="@drawable/james"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="59dp" />

    <ScrollView
        android:layout_width="222dp"
        android:layout_height="162dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView2"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="280dp"
        android:id="@+id/scrollView3">
        <TextView
            android:id="@+id/tv_james"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView2"
            android:layout_alignStart="@+id/scrollView3"
            android:layout_alignTop="@+id/scrollView3"
            android:text="@string/tv_james"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="300dp" />
    </ScrollView>




</RelativeLayout>
